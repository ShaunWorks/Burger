<div class="container text-center">
    <h1>Eat a Burger, Yo!</h1>
    <form action="/api/burgers" method="POST" id="target">
        <input type="text" name="burger_name" required><br>
        <p>Enter a Burger</p>
        <input type="submit" value="Submit" class="btn btn-primary">
    </form>

  <div class="container">
    <div class="row">
      <div class="col s6">
        {{#each burgers}}
          {{#unless this.devoured}}
            <div>
              <form action="/api/burgers/{{this.id}}?_method=PUT" method="POST">
                <button type="submit" class='burgerAvailable'> {{this.burger_name}}</button>
              </form>
            </div>
          {{/unless}}
        {{/each}}
      </div>

      <div class="col s6">
        {{#each burgers}}
          {{#if this.devoured}}
            <div class='burgerEaten'>
              <div>
                {{this.burger_name}}
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</div>